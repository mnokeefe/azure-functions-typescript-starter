{
  "scripts": {
    "clean": "rimraf .cache dist",
    "build": "npm run clean && webpack --mode production",
    "build:dev": "npm run clean && npm run lint && cp-cli src/local.settings.json dist/local.settings.json",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "watch": "npm run build:dev && npm run watch:concurrent",
    "watch:ts": "webpack --watch --mode development",
    "watch:func": "npm run build:dev && cd dist && func start",
    "watch:concurrent": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Func\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"cd dist && func start\""
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^10.12.10",
    "azure-functions-ts-essentials": "^1.3.2",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^4.6.0",
    "cp-cli": "^1.1.2",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "ts-loader": "^5.3.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.1",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2"
  }
}
